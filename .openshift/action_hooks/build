export LIBRARY_PATH=$LD_LIBRARY_PATH
pip install --use-mirrors -r $OPENSHIFT_REPO_DIR/requirements.txt

if [ ! -e "$OPENSHIFT_DATA_DIR/UglifyJS2/bin/uglifyjs" ]
then
    git clone https://github.com/mishoo/UglifyJS2.git $OPENSHIFT_DATA_DIR/UglifyJS2
fi

if [ ! -e "$OPENSHIFT_DATA_DIR/clean-css/bin/cleancss" ]
then
    git clone https://github.com/GoalSmashers/clean-css.git $OPENSHIFT_DATA_DIR/clean-css
fi
